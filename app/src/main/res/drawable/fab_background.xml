<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop shadow layer -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#40000000" /> <!-- Adjust shadow color here -->
            <corners android:radius="18dp"/>
        </shape>
    </item>
    <!-- FAB content -->
    <item
        android:bottom="5dp"> <!-- This lifts the FAB content above the shadow -->
        <shape android:shape="oval">
            <solid android:color="@color/main" /> <!-- Your FAB's background color -->
        </shape>
    </item>
</layer-list>
